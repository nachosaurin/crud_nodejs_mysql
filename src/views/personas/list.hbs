<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de personas</h3>
        {{#if personas}}
       
            <table class="table text-center">
                <thead>
                    <tr class="table-dark" style="color:black">
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Edad</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr style="color: black;">
                        <td>{{name}}</td>
                        <td>{{lastname}}</td>
                        <td>{{age}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning"><i class="fa-solid fa-pencil p-2"></i>    </a>
                                <a href="/delete/{{id}}" class="btn btn-danger"><i class="fa-regular fa-trash-can p-2"></i></a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="4  ">Registro de personas</td>
                    </tr>
                </tfoot>
            </table>
       
        {{else}}
        <div class="card text-center mx-auto" style="width: 350px;">
            <div class="card-header">
                <h3>Debes crear una persona</h3>
            </div>
            <div class="card-body">
                <p>Presiona para registrar una nueva persona</p>
                <a href="#" class="btn btn-primary">Ir a crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>

